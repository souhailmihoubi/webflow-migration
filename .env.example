# Environment Variables Template
# Copy this to .env and fill in your values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/webflow_migration_db?schema=public"

# Frontend URL for CORS
FRONTEND_URL=http://localhost:4200

# JWT Secret (CHANGE THIS IN PRODUCTION - use a strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# App
PORT=3000
NODE_ENV=development
FRONTEND_URL="http://localhost:4200"

# Email Configuration (AWS SES)
# Get credentials from: AWS Console -> AES -> SMTP Settings -> Create My SMTP Credentials
SMTP_HOST=email-smtp.eu-west-3.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_aws_ses_smtp_username
SMTP_PASS=your_aws_ses_smtp_password
EMAIL_FROM="noreply@lartistou.com"

