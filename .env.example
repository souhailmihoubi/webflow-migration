# Environment Variables Template
# Copy this to .env and fill in your values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/webflow_migration_db?schema=public"

# Frontend URL for CORS
FRONTEND_URL=http://localhost:4200

# JWT Secret (CHANGE THIS IN PRODUCTION - use a strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# App
PORT=3000
NODE_ENV=development
FRONTEND_URL="http://localhost:4200"

# Email Configuration (Optional for development - uses Ethereal Email by default)
# For production, configure a real SMTP service
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="noreply@lartistou.com"

# Example for Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password

# Example for SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# Image Upload - Local Storage (FREE!)
# Images stored in /uploads directory
# Base URL for generating image URLs
API_BASE_URL=http://localhost:3000
