generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  firstName          String
  lastName           String
  phone              String
  email              String    @unique
  password           String
  role               Role      @default(CUSTOMER)
  resetToken         String?
  resetTokenExpiry   DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  orders             Order[]
  cart               Cart?
}

model Product {
  id                 String      @id @default(uuid())
  name               String
  slug               String      @unique
  mainImage          String
  multiImages        String[]
  priceDetails       String?
  productDescription String
  caracteristiques   String?
  price              Decimal
  discountPrice      Decimal?
  showInMenu         Boolean     @default(true)
  videoLink          String?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  category           Category    @relation(fields: [categoryId], references: [id])
  categoryId         String
  orderItems         OrderItem[]
  cartItems          CartItem[]
  
  // Pack relations
  packsSam           Pack[]      @relation("PackProductSam")
  packsCac           Pack[]      @relation("PackProductCac")
  packsSalon         Pack[]      @relation("PackProductSalon")
}

model Category {
  id             String    @id @default(uuid())
  name           String
  slug           String    @unique
  image          String?
  showInHomePage Boolean   @default(false)
  createdAt      DateTime  @default(now())
  products       Product[]
}

model Order {
  id              String      @id @default(uuid())
  firstName       String
  lastName        String
  phone           String
  email           String
  shippingAddress String
  city            String
  totalPrice      Decimal
  remarks         String?
  status          OrderStatus @default(PENDING)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  user            User?       @relation(fields: [userId], references: [id])
  userId          String?
  items           OrderItem[]
}

model OrderItem {
  id          String   @id @default(uuid())
  order       Order    @relation(fields: [orderId], references: [id])
  orderId     String
  product     Product? @relation(fields: [productId], references: [id])
  productId   String?
  pack        Pack?    @relation(fields: [packId], references: [id])
  packId      String?
  quantity    Int
  priceAtTime Decimal
}

model Cart {
  id        String     @id @default(uuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String     @unique
  updatedAt DateTime   @updatedAt
  items     CartItem[]
}

model CartItem {
  id        String   @id @default(uuid())
  cart      Cart     @relation(fields: [cartId], references: [id])
  cartId    String
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  pack      Pack?    @relation(fields: [packId], references: [id])
  packId    String?
  quantity  Int
}

model Pack {
  id             String      @id @default(uuid())
  name           String
  slug           String      @unique
  description    String?
  mainImage      String?
  price          Decimal     // Calculated: 95% of sum of 3 product discountPrices
  discountPercentage Int     @default(5)
  showInMenu     Boolean     @default(true)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  
  // Relations to exactly 3 products
  productSam     Product     @relation("PackProductSam", fields: [productSamId], references: [id])
  productSamId   String
  
  productCac     Product     @relation("PackProductCac", fields: [productCacId], references: [id])
  productCacId   String
  
  productSalon   Product     @relation("PackProductSalon", fields: [productSalonId], references: [id])
  productSalonId String
  
  orderItems     OrderItem[]
  cartItems      CartItem[]
}

enum Role {
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}
